{% extends 'base.html.twig' %}

{% block title %}
    {{ user.id }}
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 1100px;
			width: 100%;
			font: 18px / 1.5 sans-serif;
		}
		.table {
			text-align: left;
		}
		.header {
			padding: 1rem;
			margin-bottom: 1rem;
		}
		.btn {
			border: none;
			color: white;
			padding: 10px 25px;
			text-align: center;
			text-decoration: none;
			display: inline-block;
			font-size: 18px;
			margin: 2px 2px 2px 5px;
			cursor: pointer;
		}
		.btn4 {
			background-color: black;
			margin-bottom: 1rem;
			margin-top: 1rem;
		}
		.btn1 {
			background-color: #008CBA; /* Blue */
		}
		.btn2 {
			background-color: #4CAF50; /* Green */
		}
		.btn3 {
			background-color: #f44336; /* Red */
		}
	</style>

	<div class="example-wrapper">
	<h1 style="margin-top: 2rem" >Current User is Here :</h1>

    <div class="card border-success mb-3" style="max-width: 20rem;">
        <div class="card-header bg-transparent border-success">User ID: {{ user.id }} </div>
		<div class="card-header bg-transparent border-success">User Email: {{ user.email }} </div>
        <div class="card-header bg-transparent border-success">User Password: {{ user.password }} </div>

        <div class="card-footer bg-transparent border-success"> 
            <a href="{{ absolute_url(asset('')) }}editUser/{{user.id}}" class="btn btn2 ">Edit</a>
			<a href="{{ absolute_url(asset('')) }}deleteUser/{{user.id}}" class="btn btn3 ">Delete</a>

			<a class="btn btn4" href="{{ path('all_users') }}"> Back </a>

        </div>

    </div>

</div>

{% endblock %} 

{% extends 'base.html.twig' %}

{% block title %}
	Add New Post
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 1100px;
			width: 100%;
			font: 18px / 1.5 sans-serif;
		}
		.btn {
			border: none;
			color: white;
			padding: 8px 15px;
			text-align: center;
			text-decoration: none;
			display: inline-block;
			font-size: 15px;
			margin: 2px 2px 2px 5px;
			cursor: pointer;
		}
		.btn4 {
			background-color: black;
			margin-bottom: 1rem;
		}
	</style>

	<div class="example-wrapper">
		<a href="{{absolute_url(asset(''))}}posts" class="btn btn4 ">Back</a>

		<h1>Create New Post Here</h1>

		{{ form_start(form) }}
		{{ form_widget(form) }}
		{{ form_end(form) }}

	</div>
{% endblock %}

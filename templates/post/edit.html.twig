{% extends 'base.html.twig' %}

{% block title %}
    Edit a Post
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">

        <h1>Edit Post</h1>

		{{ form_start(updateForm) }}
		    {# {{ form_widget(updateForm) }} #}
            {{ form_row(updateForm.title) }}
            {{ form_row(updateForm.description) }}

		{{ form_end(updateForm) }}

		<a href="{{absolute_url(asset(''))}}posts" class="btn btn-primary ">Back</a>


	</div>
{% endblock %}

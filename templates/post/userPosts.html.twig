{% extends 'base.html.twig' %}

{% block title %}
    User Posts
{% endblock %}

{% block body %}

<style>
    .example-wrapper { 
        margin: 1em auto; 
        max-width: 1100px; 
        width: 95%; 
        font: 18px/1.5 sans-serif; 

        display: grid;
        grid-template-columns: auto auto auto;
        column-gap: 5px;
        row-gap: 20px;
    }
    .example-wrapper code { 
        background: #F5F5F5; 
        padding: 2px 6px; 
    }
</style>


<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="{{ path('all_posts') }}"> Home </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">

            {% if is_granted('ROLE_ADMIN')  %}
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('admin_dashboard') }}"> Dashboard <span class="sr-only">(current)</span></a>
            </li>
            {% endif %}

            <li class="nav-item active">
                <a class="nav-link" href="{{ path('admin_dashboard') }}"> Admin Panel </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="{{ path('create_route') }}"> New Post </a>
            </li>
        </ul>

        <form class="form-inline my-2 my-lg-0">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <h6  class="nav-link"> You are login as {{app.user.email}} </h6>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/{{app.user ? 'logout' : 'login'}}"> {{app.user ? 'Logout': 'Login || Register'}}</a>
            </li>
        </ul>
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>

        </form>
    </div>
</nav>

<h1 style="text-align: center" >User Page  </h1>
<h1 style="margin-left: 8rem" >Your Posts Are Here :</h1>

<div class="example-wrapper">
    {% for post in posts %}

    <div class="card border-success mb-3" style="max-width: 20rem;">
        <div class="card-header bg-transparent border-success">{{ post.title }} </div>
        <div class="card-body text-success">
            <p class="card-text"> {{ post.description }}</p>
        </div>

        <div class="card-footer bg-transparent border-success"> 
            <a href="{{ absolute_url(asset('')) }}view/{{post.id}}" class="btn btn1 ">View</a>
            <a href="{{ absolute_url(asset('')) }}edit/{{post.id}}" class="btn btn2 ">Edit</a>
			<a href="{{ absolute_url(asset('')) }}delete/{{post.id}}" class="btn btn3 ">Delete</a>
            <a href="#" class="card-link comment-toggle" data-post-id="{{ post.id }}">Comment</a>
        </div>
    </div>
    {% endfor %}

</div>


<script>
$(document).ready(function() {
    $('.comment-toggle').click(function(e) {
        e.preventDefault();
        const postId = $(this).data('post-id');
        $('.comment-form[data-post-id="' + postId + '"]').toggle();
    });
});
</script>


{% endblock %}
